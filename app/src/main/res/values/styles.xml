<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/divider_recycler</item>
    </style>

    <!--toolbar样式-->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/grey700</item><!--toolbar标题文字颜色-->
        <item name="actionMenuTextColor">@color/grey700</item> <!--敲定颜色-->
    </style>
    <!-- toolbar返回模式-->
    <style name="ToolbarActionBack" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/grey700</item><!--toolbar标题文字颜色-->
        <item name="actionMenuTextColor">@color/grey700</item> <!--敲定颜色-->
    </style>
    <!-- toolbar弹出菜单样式 -->
    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:colorBackground">#212121</item>
    </style>
    <!-- toolbar标题样式 -->
    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SearchViewStyle">
        <item name="floatingSearch_hintTextColor">@color/grey400</item>
        <item name="floatingSearch_clearBtnColor">@color/grey700</item>
        <item name="floatingSearch_viewTextColor">@color/grey700</item>
        <item name="floatingSearch_leftActionColor">@color/grey700</item>
        <item name="floatingSearch_menuItemIconColor">@color/grey700</item>
        <item name="floatingSearch_suggestionRightIconColor">@color/grey700</item>
    </style>

</resources>
