<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_tool_bar"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/edit_tool_bar_undo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/edit_toolbar_bg"
        android:clickable="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_action_undo_normal" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/edit_tool_bar_redo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/edit_toolbar_bg"
        android:clickable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_action_redo_normal" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/edit_tool_bar_separate"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/edit_toolbar_bg"
        android:clickable="true">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_action_separate" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/edit_tool_bar_copy"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/edit_toolbar_bg"
        android:clickable="true">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_action_copy" />
    </RelativeLayout>

</LinearLayout>
