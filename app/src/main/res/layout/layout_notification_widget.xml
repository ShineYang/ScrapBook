<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/ll_widget_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp">

        <include
            android:id="@+id/iclude_widget_header"
            layout="@layout/layout_widget_bigcontent_header" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/ll_widget_header"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@color/grey350"
        android:orientation="horizontal" />

    <RelativeLayout
        android:id="@+id/rl_widget_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ll_widget_header"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/ll_widget_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_widget_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/selector_widget"
                android:clickable="true">

                <ImageView
                    android:id="@+id/iv_widget_search"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/ic_search_widget_white" />

                <TextView
                    android:id="@+id/tv_widget_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_widget_search"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="搜索"
                    android:textColor="@color/grey700"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/selector_widget"
                android:clickable="true">

                <TextView
                    style="@android:style/TextAppearance.StatusBar.EventContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_widget_separate"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="分词"
                    android:textColor="@color/grey700"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/iv_widget_separate"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/ic_seprate_widget_white" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/selector_widget"
                android:clickable="true">

                <ImageView
                    android:id="@+id/iv_widget_translate"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/ic_translate_widget_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_widget_translate"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="翻译"
                    android:textColor="@color/grey700"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/selector_widget"
                android:clickable="true">

                <ImageView
                    android:id="@+id/iv_widget_qr_code"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/ic_qrcode_widget_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_widget_qr_code"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="二维码"
                    android:textColor="@color/grey700"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:layout_weight="1"
                android:background="@drawable/selector_widget"
                android:clickable="true">

                <ImageView
                    android:id="@+id/iv_widget_share_text"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/ic_share_widget_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_widget_share_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="分享"
                    android:textColor="@color/grey700"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
